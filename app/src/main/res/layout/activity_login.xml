<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/activity2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_text"
        android:textStyle="bold"
        android:layout_margin="1dp"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="#448C47"
        android:fontFamily="sans-serif-medium"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="17sp"
        app:cornerRadius="16dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_lock_24"
        android:drawableTint="#01534C"
        android:hint="Password"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#D1F3AB"
        android:padding="12dp"
        android:layout_marginBottom="32dp"
        android:drawablePadding="8dp"

        />

    <EditText
        android:id="@+id/et_Username"
        android:layout_width="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/et_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="text"
        android:drawableStart="@drawable/ic_person_24"
        android:drawableTint="#03A9F4"
        android:hint="Username"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#D1F3AB"
        android:padding="12dp"
        android:drawablePadding="8dp"

        />

    <TextView
        android:id="@+id/tv_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login To Your Account"
        app:layout_constraintBottom_toTopOf="@id/et_Username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="64dp"
        android:textSize="20sp"
        android:textColor="#515151"
        />

    <TextView
        android:id="@+id/tv_welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:letterSpacing="0.08"
        app:layout_constraintBottom_toTopOf="@id/tv_login_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#004040"
        />

</androidx.constraintlayout.widget.ConstraintLayout>